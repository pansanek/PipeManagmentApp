@model Pipe

<h1>@ViewBag.Title</h1>
<form asp-action="Create" method="post" class="form-horizontal">
    <div class="form-group" style="margin-bottom: 20px;">
        <label asp-for="number"></label>
        <div class="col-md-5">
            <input asp-for="number" class="form-control"/>
            <span asp-validation-for="number" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group" style="margin-bottom: 20px;">
        <label asp-for="quality"></label>
        <div class="col-md-5">
            <input asp-for="quality" class="form-control" />
            <span asp-validation-for="quality" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group" style="margin-bottom: 20px;">
        <label asp-for="steelGrade"></label>
        <div class="col-md-5">
            <input asp-for="steelGrade" class="form-control" />
            <span asp-validation-for="steelGrade" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group" style="margin-bottom: 20px;">
        <label asp-for="dimensions"></label>
        <div class="col-md-5">
            <input asp-for="dimensions" class="form-control" />
            <span asp-validation-for="dimensions" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group" style="margin-bottom: 20px;">
        <label asp-for="weight"></label>
        <div class="col-md-5">
            <input asp-for="weight" class="form-control" />
            <span asp-validation-for="weight" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group" style="margin-bottom: 20px;">
        <input type="submit" value="Сохранить" class="btn btn-primary" />
    </div>
</form>


