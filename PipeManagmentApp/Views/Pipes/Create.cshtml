@model Pipe

<h1>@ViewBag.Title</h1>
<form asp-action="Create" method="post" class="form-horizontal">
    <div class="form-group" style="margin-bottom: 20px;">
        <label asp-for="number"></label>
        <div class="col-md-5">
            <input asp-for="number" class="form-control"/>
            <span asp-validation-for="number" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group" style="margin-bottom: 20px;">
        <label asp-for="quality"></label>
        <div class="col-md-5">
            <select asp-for="quality" class="form-control">
                <option value="Брак">Брак</option>
                <option value="Годное">Годное</option>
            </select>
            <span asp-validation-for="quality" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group" style="margin-bottom: 20px;">
        <label asp-for="steelGrade"></label>
        <div class="col-md-5">
            <select asp-for="steelGrade" class="form-control">
                <option value="Ст">Ст — обыкновенная нелегированная сталь</option>
                <option value="А">А — сталь с гарантируемыми механическими свойствами</option>
                <option value="Б">Б — сплав гарантированного состава</option>
                <option value="В">В — сталь для сварных конструкций</option>
                <option value="К">К — качественная углеродистая сталь</option>
                <option value="Л">Л — литейная конструкционная сталь</option>
                <option value="С">С — строительная сталь</option>
                <option value="У">У — углеродистая инструментальная сталь</option>
                <option value="Э">Э — электротехническая сталь</option>
            </select>
            <span asp-validation-for="steelGrade" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group" style="margin-bottom: 20px;">
        <label asp-for="dimensions"></label>
        <div class="col-md-5">
            <input asp-for="dimensions" pattern="\d+x\d+" class="form-control" />
            <span asp-validation-for="dimensions" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group" style="margin-bottom: 20px;">
        <label asp-for="weight"></label>
        <div class="col-md-5">
            <input asp-for="weight" class="form-control" />
            <span asp-validation-for="weight" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group" style="margin-bottom: 20px;">
        <input type="submit" value="Сохранить" class="btn btn-primary" />
    </div>
</form>


