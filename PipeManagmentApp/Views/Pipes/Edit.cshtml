@model Pipe

@{
    ViewBag.Title = "Редактирование трубы";
}

<h1>@ViewBag.Title @Model.number</h1>

<form asp-action="Edit" method="post">
    <div class="form-group" style="margin-bottom: 20px;">
        <label asp-for="number" class="control-label">№ Трубы</label>
        <div class="col-md-5">
        <input asp-for="number" class="form-control" />
        <span asp-validation-for="number" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group" style="margin-bottom: 20px;">
        <label asp-for="quality"></label>
        <div class="col-md-5">
            <select asp-for="quality" class="form-control">
                <option value="Брак">Брак</option>
                <option value="Годное">Годное</option>
            </select>
            <span asp-validation-for="quality" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group" style="margin-bottom: 20px;">
        <label asp-for="steelGrade" class="control-label">Марка стали</label>
        <div class="col-md-5">
        <input asp-for="steelGrade" class="form-control" />
        <span asp-validation-for="steelGrade" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group" style="margin-bottom: 20px;">
        <label asp-for="dimensions" class="control-label">Размеры</label>
        <div class="col-md-5">
        <input asp-for="dimensions" pattern="\d+x\d+" class="form-control" />
        <span asp-validation-for="dimensions" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group" style="margin-bottom: 20px;">
        <label asp-for="weight" class="control-label">Вес</label>
        <div class="col-md-5">
        <input asp-for="weight" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="weight" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group" style="margin-bottom: 20px;">
        <input type="submit" value="Сохранить изменения" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </div>
</form>

